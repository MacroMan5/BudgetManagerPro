# Frontend Environment Variables
# Copy this file to .env and update values for your environment

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=BudgetManager Pro
VITE_APP_VERSION=0.1.0
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false

# UI Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_CURRENCY=USD
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_ITEMS_PER_PAGE=50

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=.csv

# Security Configuration
VITE_SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds
VITE_TOKEN_REFRESH_THRESHOLD=300000  # 5 minutes in milliseconds

# Development Configuration
VITE_ENABLE_HMR=true
VITE_ENABLE_SOURCE_MAPS=true
